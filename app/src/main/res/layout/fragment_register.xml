<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    tools:context=".view.RegisterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_tv"
        android:text="Register"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/input_register"
        android:layout_marginBottom="70dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_register"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_username"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_username_register"
                android:layout_marginHorizontal="10dp"
                android:hint="Username"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_name"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_name_register"
                android:layout_marginHorizontal="10dp"
                android:hint="Name"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_password"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_password_register"
                android:layout_marginHorizontal="10dp"
                android:hint="Password"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_confirm_password"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_confirm_password_register"
                android:layout_marginHorizontal="10dp"
                android:hint="Confirm Password"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:layout_below="@id/input_register"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="20dp"/>





</RelativeLayout>